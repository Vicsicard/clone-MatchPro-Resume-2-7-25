{
    "openapi":"3.0.0",
    "info":{
        "title":"Resume Mathcer",
        "description":"API to process PDF resume files and an array list of job descriptions. It iterates over the processed job descriptions and calculates the similarity score between each job description and the resume, storing the results in the database.",
        "version":"1.0.0"
    },
    "paths":{
        "/upload_resume/":{
            "post":{
                "summary": "Upload a new resume (PDF)",
                "requestBody":{
                    "required":true,
                    "content":{
                        "multipart/form-data":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "resume_file":{
                                        "type":"string",
                                        "format":"binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Resume uploaded successfully",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "filename":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description":"Internal server error",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/retrieve_resume/{filename}":{
            "get":{
                "summary":"Retrieve a specific resume by filename",
                "parameters":[
                    {
                        "name":"filename",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"string"
                        },
                        "description":"Name of the resume to retrieve"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Resume retrieved successfully",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object"
                                }
                            }
                        }
                    },
                    "404":{
                        "description":"Resume not found",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description":"Error retrieving resume",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/process_resume_from_path/":{
            "post":{
                "summary":"Process a resume from an absolute file path",
                "requestBody":{
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "file_path":{
                                        "type":"string"
                                    }
                                },
                                "required":["file_path"]
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Resume processed successfully",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "filename":{
                                            "type":"string"
                                        },
                                        "resume__string":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Bad request",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description":"Error processing resume file",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/upload_job_descriptions/":{
            "post":{
                "summary":"Upload job descriptions from an array of text",
                "requestBody":{
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "job_descriptions":{
                                        "type":"array",
                                        "items":{
                                            "type":"object",
                                            "properties": {
                                                "filename":{
                                                    "type":"string"
                                                },
                                                "text_array":{
                                                    "type":"array",
                                                    "items":{
                                                        "type":"string"
                                                    }
                                                }
                                            },
                                            "required":["filename","text_array"]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Job descriptions uploaded successfully",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "job_descriptions":{
                                            "type":"array",
                                            "items":{
                                                "type":"object",
                                                "properties":{
                                                    "filename":{
                                                        "type":"string"
                                                    },
                                                    "jd_annotated_text_content":{
                                                        "type":"string"
                                                    },
                                                    "jd_strings":{
                                                        "type":"string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description":"Error uploading job descriptions",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/job_descriptions":{
            "get":{
                "summary":"Get filenames and extracted strings from all job descriptions",
                "responses":{
                    "200":{
                        "description":"Job descriptions fetched successfully",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"array",
                                    "items":{
                                        "type":"array",
                                        "items":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description":"Error fetching job descriptions",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/calculate_similarity_score":{
            "post":{
                "summary":"Calculate similarity scores between a resume and all job descriptions",
                "requestBody":{
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "file_path":{
                                        "type":"string"
                                    }
                                },
                                "required":["file_path"]
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Similarity scores calculates successfully",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "resume_filename":{
                                            "type":"string"
                                        },
                                        "similarity_scores":{
                                            "type":"array",
                                            "items":{
                                                "type":"object",
                                                "properties":{
                                                    "job_description_filename":{
                                                        "type":"string"
                                                    },
                                                    "similarity_score":{
                                                        "type":"number",
                                                        "format":"float"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Bad request",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description":"Error calculating similarity scores",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "detail":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}